<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/medium_padding">

    <ImageView
        android:id="@+id/img_artwork"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_size"
        android:layout_weight="2"
        android:contentDescription="@string/img_content_description_artwork"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:padding="@dimen/medium_padding">

        <TextView
            android:id="@+id/txt_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="13sp"
            android:padding="@dimen/smallest_padding"/>

        <TextView
            android:id="@+id/txt_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="13sp"
            android:padding="@dimen/smallest_padding"/>

        <TextView
            android:id="@+id/txt_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            android:padding="@dimen/smallest_padding"/>

        <TextView
            android:id="@+id/txt_launch_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            android:padding="@dimen/smallest_padding"/>

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            android:padding="@dimen/smallest_padding"/>

        <TextView
            android:id="@+id/txt_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            android:padding="@dimen/smallest_padding"/>

        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"
            android:padding="@dimen/smallest_padding"/>
    </LinearLayout>
</LinearLayout>